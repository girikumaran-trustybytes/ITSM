{
  "name": "cmdb-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:init": "ts-node ./scripts/db-init.ts",
    "db:seed": "ts-node ./scripts/db-seed.ts",
    "db:setup": "npm run db:init && npm run db:seed",
    "smoke:test": "ts-node ./scripts/smoke-ticket-flow.ts"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.0",
    "pg": "^8.11.5",
    "winston": "^3.8.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.7",
    "@types/pg": "^8.10.11",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.1.6"
  }
}
